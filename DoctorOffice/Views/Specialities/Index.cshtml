@{
  Layout = "_Layout";
}

@using DoctorOffice.Models;

<h1>Specialities</h1>

@if (@Model.Count == 0)
{
  <h3>No specialities have been added yet!</h3>
}

<ul>
  @foreach (Speciality speciality in Model)
  {
    <li>@Html.ActionLink($"{speciality.Name}", "Details", new { id = speciality.SpecialityId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new Speciality", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
